<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="640.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RecipeScreenController">
   <center>
      <ScrollPane hbarPolicy="NEVER" prefHeight="640.0" prefWidth="1024.0" style="-fx-background-color: FDE4D3;" BorderPane.alignment="CENTER">
         <content>
            <VBox prefHeight="640.0" prefWidth="1024.0" style="-fx-background-color: FDE4D3;">
               <children>
                  <HBox prefHeight="200.0" prefWidth="1024.0">
                     <children>
                        <Button fx:id="backRecipeBtn" mnemonicParsing="false" onAction="#backToRecipe" style="-fx-background-color: white; -fx-border-color: #8d7463; -fx-border-radius: 30; -fx-background-radius: 30;" text="Back to Recipe" textFill="#8d7463">
                           <HBox.margin>
                              <Insets left="20.0" top="40.0" />
                           </HBox.margin>
                           <font>
                              <Font name="Arial" size="16.0" />
                           </font>
                        </Button>
                        <Label fx:id="recipeName" alignment="CENTER" contentDisplay="RIGHT" prefHeight="91.0" prefWidth="510.0" text="Recipe's Name" textAlignment="CENTER" textFill="#8d7463" wrapText="true">
                           <font>
                              <Font name="Times New Roman Bold" size="40.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="100.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox prefHeight="330.0" prefWidth="1024.0">
                     <children>
                        <ImageView fx:id="foodImage" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                           <HBox.margin>
                              <Insets left="80.0" />
                           </HBox.margin>
                        </ImageView>
                        <VBox prefHeight="300.0" prefWidth="560.0">
                           <HBox.margin>
                              <Insets left="40.0" />
                           </HBox.margin>
                           <children>
                              <Label text="Ingredients" textFill="#8d7463">
                                 <font>
                                    <Font name="Times New Roman Bold" size="25.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="20.0" />
                                 </VBox.margin>
                              </Label>
                              <Label fx:id="foodIngredients" alignment="TOP_LEFT" prefHeight="234.0" prefWidth="540.0" text="ingredients here" textFill="#8d7463" wrapText="true">
                                 <font>
                                    <Font name="Arial" size="20.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets top="10.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
                  <VBox prefHeight="295.0" prefWidth="734.0">
                     <children>
                        <Label text="Cooking Instructions" textFill="#8d7463">
                           <font>
                              <Font name="Times New Roman Bold" size="25.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="40.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="foodInstruction" alignment="TOP_LEFT" prefHeight="190.0" prefWidth="930.0" text="Instructions Here" textFill="#8d7463" wrapText="true">
                           <font>
                              <Font size="20.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="40.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
