    <top>
        <Pane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </top>
    <bottom>
        <Pane prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </bottom>
    <left>
        <Pane prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <Pane prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
    </right>
    <center>
        <Pane prefHeight="200.0" prefWidth="824.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="116.0" fitWidth="110.0" layoutX="260.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../Pictures/cooking.png" />
                    </image>
                </ImageView>
                <Label layoutX="372.0" layoutY="23.0" text="Daisty" textFill="#8d7463">
                    <font>
                        <Font name="Times New Roman Bold" size="70.0" />
                    </font>
                </Label>
                <Label layoutX="200.0" layoutY="161.0" text="Username" textFill="#8d7463">
                    <font>
                        <Font name="Arial" size="25.0" />
                    </font>
                </Label>
                <Label layoutX="200.0" layoutY="213.0" text="Password" textFill="#8d7463">
                    <font>
                        <Font name="Arial" size="25.0" />
                    </font>
                </Label>
            <Label layoutX="200.0" layoutY="264.0" prefHeight="30.0" prefWidth="217.0" text="Re-type Password" textFill="#8d7463">
               <font>
                  <Font name="Arial" size="25.0" />
               </font>
            </Label>
                <TextField fx:id="usrname" layoutX="420.0" layoutY="163.0" prefHeight="27.0" prefWidth="220.0" />
